{
  "name": "mytv",
  "version": "0.1.0",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "terminal": "node src/backend/terminal.js",
    "build": "preact build",
    "serve": "sirv build --port 8080 --cors --single && npm run term",
    "dev": "preact watch && npm run term",
    "lint": "eslint src",
    "fix": "prettier --write ."
  },
  "eslintConfig": {
    "extends": "preact",
    "ignorePatterns": [
      "build/"
    ]
  },
  "devDependencies": {
    "enzyme": "^3.10.0",
    "enzyme-adapter-preact-pure": "^2.0.0",
    "eslint": "^6.0.1",
    "eslint-config-preact": "^1.1.0",
    "jest": "^24.9.0",
    "jest-preset-preact": "^1.0.0",
    "preact-cli": "^3.0.0",
    "prettier": "2.7.1",
    "sirv-cli": "1.0.3"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "hls.js": "^0.8.9",
    "iptv-m3u": "^1.1.5",
    "iptv-playlist-parser": "^0.12.1",
    "m3u8-file-parser": "^0.2.4",
    "node-gyp": "^9.1.0",
    "node-pty": "^0.10.1",
    "preact": "^10.3.2",
    "preact-render-to-string": "^5.1.4",
    "preact-router": "^3.2.1",
    "socket.io": "^4.5.1",
    "socket.io-client": "^4.5.1",
    "webworkify-webpack": "^2.1.5",
    "xterm": "^4.19.0",
    "xterm-addon-fit": "^0.5.0"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js",
      "<rootDir>/tests/__mocks__/setupTests.js"
    ]
  }
}
